<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cse403.finderskeepers">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserSettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_user_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddItemWindowActivity"
            android:exported="true"
            android:label="AddItemWindowActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DisconnectionError" />
        <activity
            android:name=".BrowseNearbyActivity"
            android:label="@string/title_activity_browse_nearby"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OtherUserPageActivity"
            android:label="@string/title_activity_other_user_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OtherUserItemViewActivity"
            android:label="@string/title_activity_other_user_item_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProposeTradeActivity"
            android:label="@string/title_activity_propose_trade"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewTradesActivity"
            android:label="@string/title_activity_view_trades"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>