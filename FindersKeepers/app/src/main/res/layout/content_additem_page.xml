<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_inventory_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cse403.finderskeepers.HomePage"
    tools:showIn="@layout/activity_additem">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_control_point_black_24dp"
        android:id="@+id/add_item_img"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"
        android:layout_weight="2"/>

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:text="@string/tag_add"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/user_addtag_text"
        android:textSize="30sp"
        android:textColor="@color/bootstrap_brand_secondary_text"
        android:layout_gravity="start"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textCapWords"
        android:hint="@string/item_add_tags_hint"
        android:id="@+id/editTags"
        android:layout_weight="1" />

    <Button
        android:text="Add Item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/upload_button"
        android:layout_weight="1"/>

</LinearLayout>